        <attr name="main_img_src" format="reference|color"></attr>
        <attr name="main_img_radius" format="dimension"></attr>
        <attr name="tag_img_src" format="reference|color"></attr>
        <attr name="tag_img_radius" format="dimension"></attr>
        <attr name="main_boder_color" format="reference|color"></attr>
        <attr name="main_boder_width" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="Emojicon">
        <attr name="emojiconSize" format="dimension" />
